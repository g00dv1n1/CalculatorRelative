<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textOut"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="end"
        android:text="0"/>

    <LinearLayout
        android:id="@+id/pan1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textOut">
        <Button
            android:id="@+id/buttonC"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="C"/>
        <Button
            android:id="@+id/buttonZ"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="+/-"/>
        <Button
            android:id="@+id/buttonPrc"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="%"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pan2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toEndOf="@+id/pan1"
        android:layout_below="@+id/textOut">

        <Button
            android:id="@+id/buttonD"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="/"/>
        <Button
            android:id="@+id/buttonX"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="x"/>
        <Button
            android:id="@+id/buttonM"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="-"/>
        <Button
            android:id="@+id/buttonPlus"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="+"/>
        <Button
            android:id="@+id/buttonR"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="="/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/str1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pan1">
        <Button
            android:id="@+id/num1"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="1"/>
        <Button
            android:id="@+id/num2"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="2"/>
        <Button
            android:id="@+id/num3"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="3"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/str2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/str1">
        <Button
            android:id="@+id/num4"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="4"/>
        <Button
            android:id="@+id/num5"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="5"/>
        <Button
            android:id="@+id/num6"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="6"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/str3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/str2">
        <Button
            android:id="@+id/num7"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="7"/>
        <Button
            android:id="@+id/num8"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="8"/>
        <Button
            android:id="@+id/num9"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="9"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/str4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/str3">
        <Button
            android:id="@+id/num0"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="0"/>
        <Button
            android:id="@+id/buttonDot"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="."/>



    </LinearLayout>



</RelativeLayout>